<Window x:Class="Client_Testing.View.MainUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Testing.View"
        mc:Ignorable="d"
        Title="MainUserForm" Height="450" Width="800">

    <TabControl  Margin="0" TabStripPlacement="Left">

        <TabItem Header="UserTests" DataContext="{Binding Children[0]}">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="393*"/>
                    <ColumnDefinition Width="331*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="372*"/>
                    <RowDefinition Height="43*"/>
                </Grid.RowDefinitions>
                <Button Content="Refresh" Command="{Binding Refresh}" FontSize="20" BorderBrush="Black" BorderThickness="2"  Grid.Row="1"/>
                <ListBox ItemsSource="{Binding Path=Groups}" />
            </Grid>
        </TabItem>
    </TabControl>


</Window>
