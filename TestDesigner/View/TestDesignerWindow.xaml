<Window x:Class="TestDesigner.CreateTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:TestDesigner"
        mc:Ignorable="d"
        Title="CreateTestWindow" Height="450" Width="800" Background="#FFD3FFF6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320*"/>
            <ColumnDefinition Width="319*"/>
            <ColumnDefinition Width="154*"/>
        </Grid.ColumnDefinitions>

        <ListBox Margin="0" Grid.RowSpan="3" BorderBrush="Black" ItemsSource="{Binding Test.Questions}" SelectedItem="{Binding Path=CurrentQuestion}" BorderThickness="1,1,3,1"/>


        <Label Content="Question:" Grid.Column="1" HorizontalAlignment="Left" Margin="3,5,0,0" VerticalAlignment="Top" Width="128" FontWeight="Bold" FontSize="18" Height="34"/>
        <TextBox Grid.Column="1" Text="{Binding CurrentQuestion.Question_str,Mode=TwoWay}" Margin="10,45,17.2,0" TextWrapping="Wrap"  FontSize="18" Background="White" TextAlignment="Center" BorderThickness="2" BorderBrush="Black" Height="36" VerticalAlignment="Top"/>

        <Label Content="Dificulty:" Grid.Column="2" Margin="14.8,5,39.6,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Height="34"/>
        <ComboBox Grid.Column="2" Margin="5.8,39,9.6,55" ItemsSource="{Binding LevelsOfDificulty}" SelectedValue="{Binding CurrentQuestion.Dificulty}"/>


        <ListBox Grid.Column="1" Margin="0" Grid.Row="1" Background="#FFE1EDFF" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding CurrentQuestion.Variants}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"  Margin="0" Height="30">
                        <RadioButton Margin="0" IsChecked="{Binding IsRight}" GroupName="1">
                            <RadioButton.Content>
                                <TextBox Text="{Binding  Variant_str,Mode=TwoWay}" Width="150" Height="30" />
                            </RadioButton.Content>
                        </RadioButton>
                        <Button Content="X" FontWeight="Bold" Width="25" CommandParameter="{Binding}" Command="{Binding Path=DataContext.DeleteAnswer,RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>


        </ListBox>
        <StackPanel Grid.Column="2"  Margin="5.8,6,-0.4,0" Grid.Row="1" Grid.RowSpan="2">
            <Button Content="Add new answer" Command="{Binding AddNewAnswer}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134" Height="45" FontWeight="Bold" FontSize="16" BorderThickness="2" BorderBrush="Black" Margin="10,0,0,0"/>

        </StackPanel>
        <Button Content="Save" Grid.Column="1" Margin="5" Command="{Binding SaveQuestion}"  FontWeight="Bold" FontSize="16" BorderThickness="2" BorderBrush="Black" Grid.Row="2"/>
    </Grid>
</Window>
